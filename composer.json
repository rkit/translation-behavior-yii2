{
    "name": "rkit/translation-behavior-yii2",
    "description": "Translation Behavior for Yii2",
    "keywords": ["yii2", "extension", "translation", "behavior"],
    "homepage": "https://github.com/rkit/translation-behavior-yii2",
    "type": "yii2-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Romanov",
            "email": "rkit.ru@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/rkit/translation-behavior-yii2/issues",
        "source": "https://github.com/rkit/translation-behavior-yii2"
    },
    "require": {
        "yiisoft/yii2": "^2.0.0, !=2.0.15.1"
    },
    "scripts": {
        "test:build": [
            "php tests/yii migrate --migrationPath=@tests/migrations/ --interactive=0"
        ],
        "test": "phpunit --colors=always --testdox"
    },
    "autoload": {
        "psr-4": {
            "rkit\\translation\\behavior\\": "src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "phpunit/phpunit": "^7.2",
        "phpunit/dbunit": "^4.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
